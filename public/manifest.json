{
  "manifest_version": 3,
  "name": "Dev Tools",
  "description": "All-in-one developer tools like color picker, unit converter, etc.",
  "version": "1.0",
  "action": {
    "default_title": "Toggle Dev Tools Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "html2canvas.min.js",
        "content.js"
      ]
    }
  ],
  "devtools_page": "index.html",
  "web_accessible_resources": [
    {
      "resources": ["index.html", "html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
