{
  "manifest_version": 3,
  "name": "Dev Tools Sidebar",
  "description": "All-in-one developer tools like unit converter, etc.",
  "version": "1.0",
  "action": {
    "default_title": "Toggle Dev Tools Sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
